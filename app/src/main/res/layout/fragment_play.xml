<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/coin_click_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="189dp"
        android:layout_marginTop="108dp"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="91dp" />



    <TextView
        android:id="@+id/coins_number_textView"
        android:layout_width="229dp"
        android:layout_height="38dp"
        android:layout_marginEnd="233dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="233dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="@string/coins"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/coin_click_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_width="259dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/click_coin_or_shake_ur_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_click_button" />
</android.support.constraint.ConstraintLayout>